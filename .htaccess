<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{REQUEST_URI} /public
# if file exists
RewriteCond %{REQUEST_FILENAME} -s
# return that file
RewriteRule ^.*$ - [NC,L]
RewriteRule . index.php [L]
</IfModule>

# Disable directory browsing:
Options All -Indexes
# Prevent folder listing:
IndexIgnore *